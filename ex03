let preco = Number(prompt("Preço R$:"));
let aVista = preco * 0.90; // 10% de desconto
let parcelas = preco / 3;
alert("À Vista R$: " + aVista.toFixed(2) + "\nOu 3x de R$: " + parcelas.toFixed(2));
    </script>
    
