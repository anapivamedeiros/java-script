concatenar.html
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        let numero = Number(prompt("N° dias: "));
        let texto = "O numero é: ";
        let resultado = texto + numero;
        console.log(resultado);
        alert(resultado);
    </script>
</body>
</html>


soma.html
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Soma simples</title>
</head>
<body>
    <script>
        let a = 5;
        let b = 3;
        let soma = a + b;
        console.log(soma);
        alert(soma);
    </script>
</body>
</html>

sla.html
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello World</title>
</head>
<body>
    <script>
        "use strict";
        let x = "Hello, World!";
        console.log(x);
        alert(x);
        </script>
</body>
</html>
