    <script>
let dia = prompt("Digite o nome do dia da semana:").toLowerCase();
if (["sábado", "domingo"].includes(dia)) {
  alert("Fim de semana");
} else if (
  ["segunda-feira", "terça-feira", "quarta-feira", "quinta-feira", "sexta-feira"].includes(dia)
) {
  alert("Dia útil");
} else {
  alert("Dia inválido");
}
    </script>
    
</body>
