    <script>
let idadePessoa2 = Number(prompt("Digite sua idade:"));
let valorCompra = Number(prompt("Valor da compra (R$):"));
let valorFinal;

if (idadePessoa2 <= 12) {
  valorFinal = valorCompra * 0.5; // 50% de desconto para crianÃ§as
} else if (idadePessoa2 >= 60) {
  valorFinal = valorCompra * 0.7; // 30% de desconto para idosos
} else {
  valorFinal = valorCompra; // Sem desconto para adultos
}

alert("Valor final a pagar: R$ " + valorFinal.toFixed(2));
    </script>
    
