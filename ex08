    <script>
let salarioInicial = Number(prompt("Sal치rio inicial (R$):"));
let aumento = salarioInicial * 0.15;
let salarioComAumento = salarioInicial + aumento;
let imposto = salarioComAumento * 0.08;
let salarioFinal = salarioComAumento - imposto;

alert(
  "Sal치rio inicial: R$ " + salarioInicial.toFixed(2) +
  "\nSal치rio com aumento: R$ " + salarioComAumento.toFixed(2) +
  "\nSal치rio final (com desconto de 8%): R$ " + salarioFinal.toFixed(2)
);
    </script>
    
